@model IEnumerable<BlogMvcApp.Models.BlogModel>



@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Bu kategoride kayıt bulunamadı</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        
        <div class="card content" style="
              width: 800px;
              margin-bottom:40px;
              box-shadow: 10px 10px 10px rgb(156, 156, 156);">
            <img src="https://picsum.photos/seed/picsum/800/300" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title text-xl-center"><b> @blog.Baslik</b></h5>
                <div class="d-flex flex-row-reverse ">
                    <span class="bi-clock ">   @blog.EklenmeTarihi</span>
                </div>
                <br />
                <p class="card-text">@blog.Aciklama</p>
                @Html.ActionLink("Daha Fazla", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })
            </div>
        </div>


    }


}

