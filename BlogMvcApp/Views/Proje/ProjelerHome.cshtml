@model IEnumerable<BlogMvcApp.Models.Proje>
@{
    ViewBag.Title = "ProjelerHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <style>
        a {
            text-decoration: none;
        }
    </style>
</head>
<body>

    <br />
    <h2 style="font-family: 'Pacifico', cursive; text-align:center; font-size:50px;">Projeler</h2>
    <br />
    <hr />
    <br />
    @foreach (var proje in Model)
    {

        <div class="card content" style="
             width: 800px;
             margin-bottom:100px;
             margin-left:auto;
             margin-right:auto;
             width: 800px;
             margin-bottom:40px;
             box-shadow: 10px 10px 10px rgb(156, 156, 156);">
            <img src="https://picsum.photos/seed/picsum/800/300" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title text-xl-center"><b> @proje.ProjeAd</b></h5>
                <div class="d-flex flex-row-reverse ">
                    <span class="bi-calendar">   @proje.ProjeTarihi.Day.@proje.ProjeTarihi.Month.@proje.ProjeTarihi.Year</span>
                </div>
                <br />

                <a target="_blank" href="@proje.ProjeOzet">
                    <blockquote style=" background: #f9f9f9;
                border-left: 10px solid #ccc;
                margin: 1.5em 10px;
                padding-top:6px;
                padding-left:5px;
                ">
                        <p>Proje Linki : @proje.ProjeOzet</p>
                    </blockquote>
                </a>


                <p class="card-text">@proje.ProjeAciklama</p>

            </div>
        </div>
    }
</body>




